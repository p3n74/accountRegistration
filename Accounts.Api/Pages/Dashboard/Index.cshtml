@page
@model Accounts.Api.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="min-vh-100" style="background: var(--cisco-gradient-background);">
    <div class="container-fluid px-4 py-4" style="max-width: 1400px;">
        <div class="row g-4">
            <!-- Welcome Section -->
            <div class="col-12">
                <div class="cisco-card cisco-gradient-animate">
                    <div class="cisco-card-header d-flex align-items-center">
                        <div class="flex-shrink-0 me-4">
                            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                            {
                                <img class="rounded-3 border border-4 border-white shadow-lg" 
                                     src="/profilePictures/@Model.ProfilePicture" 
                                     alt="@(Model.UserName)'s profile picture" 
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="cisco-glass rounded-3 border border-4 border-white shadow-lg d-flex align-items-center justify-content-center"
                                     style="width: 80px; height: 80px;">
                                    <i class="fas fa-user text-white" style="font-size: 2rem;" aria-hidden="true"></i>
                                </div>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <h1 class="text-white mb-2 fw-bold" style="font-size: var(--cisco-text-4xl);">
                                Welcome back, @Model.UserName!
                            </h1>
                            <p class="text-white-50 mb-0" style="font-size: var(--cisco-text-lg);">
                                Discover campus events and track your CISCO journey
                            </p>
                        </div>
                        <div class="d-none d-lg-block">
                            <div class="cisco-glass rounded-3 p-3">
                                <div class="text-center">
                                    <div class="fw-bold text-white" style="font-size: var(--cisco-text-xl);">
                                        @DateTime.Now.ToString("MMM dd")
                                    </div>
                                    <div class="text-white-50 small">
                                        @DateTime.Now.ToString("yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="px-4 py-4" style="background: linear-gradient(135deg, var(--cisco-light-blue), rgba(74, 144, 226, 0.1));">
                        <div class="row g-3">
                            <div class="col-md-4 text-center">
                                <div class="cisco-stat-card">
                                    <div class="cisco-stat-number">@Model.AttendedEventsCount</div>
                                    <div class="cisco-stat-label">Events Attended</div>
                                    <div class="mt-2">
                                        <i class="fas fa-calendar-check" style="color: var(--cisco-primary-blue); font-size: var(--cisco-text-lg);" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="cisco-stat-card">
                                    <div class="cisco-stat-number">@Model.BadgesCount</div>
                                    <div class="cisco-stat-label">Badges Earned</div>
                                    <div class="mt-2">
                                        <i class="fas fa-award" style="color: var(--cisco-warning); font-size: var(--cisco-text-lg);" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="cisco-stat-card">
                                    <div class="cisco-stat-number">@Model.UpcomingEventsCount</div>
                                    <div class="cisco-stat-label">Upcoming Events</div>
                                    <div class="mt-2">
                                        <i class="fas fa-clock" style="color: var(--cisco-success); font-size: var(--cisco-text-lg);" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-12">
                <div class="cisco-card">
                    <div class="cisco-card-body">
                        <div class="d-flex align-items-center mb-4">
                            <div class="me-3 cisco-glass" style="width: 40px; height: 40px; border-radius: var(--cisco-radius-md); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-bolt cisco-text-gradient" aria-hidden="true"></i>
                            </div>
                            <h2 class="mb-0 fw-bold">Quick Actions</h2>
                            <div class="ms-auto d-none d-md-block">
                                <small class="text-muted">Everything you need at your fingertips</small>
                            </div>
                        </div>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <a href="/events" class="text-decoration-none">
                                    <div class="cisco-card h-100 text-center position-relative overflow-hidden" 
                                         style="background: var(--cisco-gradient-success); border: none; transition: all var(--cisco-transition-base);">
                                        <div class="cisco-card-body text-white position-relative">
                                            <div class="mb-3">
                                                <i class="fas fa-calendar-alt" style="font-size: 3rem; opacity: 0.9;" aria-hidden="true"></i>
                                            </div>
                                            <h4 class="fw-bold mb-2">Browse Events</h4>
                                            <p class="mb-0 opacity-90">Discover upcoming campus events and activities</p>
                                        </div>
                                        <div class="position-absolute top-0 end-0 p-3">
                                            <i class="fas fa-arrow-right opacity-50" aria-hidden="true"></i>
                                        </div>
                                        <div class="position-absolute bottom-0 start-0 w-100 h-100 opacity-10">
                                            <div class="position-absolute bottom-0 end-0" style="width: 100px; height: 100px; background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);"></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/events/create" class="text-decoration-none">
                                    <div class="cisco-card h-100 text-center position-relative overflow-hidden" 
                                         style="background: var(--cisco-gradient-warning); border: none; transition: all var(--cisco-transition-base);">
                                        <div class="cisco-card-body text-white position-relative">
                                            <div class="mb-3">
                                                <i class="fas fa-plus-circle" style="font-size: 3rem; opacity: 0.9;" aria-hidden="true"></i>
                                            </div>
                                            <h4 class="fw-bold mb-2">Create Event</h4>
                                            <p class="mb-0 opacity-90">Organize and share your own campus events</p>
                                        </div>
                                        <div class="position-absolute top-0 end-0 p-3">
                                            <i class="fas fa-arrow-right opacity-50" aria-hidden="true"></i>
                                        </div>
                                        <div class="position-absolute bottom-0 start-0 w-100 h-100 opacity-10">
                                            <div class="position-absolute bottom-0 end-0" style="width: 100px; height: 100px; background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);"></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/dashboard/badges" class="text-decoration-none">
                                    <div class="cisco-card h-100 text-center position-relative overflow-hidden" 
                                         style="background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%); border: none; transition: all var(--cisco-transition-base);">
                                        <div class="cisco-card-body text-white position-relative">
                                            <div class="mb-3">
                                                <i class="fas fa-award" style="font-size: 3rem; opacity: 0.9;" aria-hidden="true"></i>
                                            </div>
                                            <h4 class="fw-bold mb-2">View My Badges</h4>
                                            <p class="mb-0 opacity-90">See all your CISCO achievements and earned badges</p>
                                        </div>
                                        <div class="position-absolute top-0 end-0 p-3">
                                            <i class="fas fa-arrow-right opacity-50" aria-hidden="true"></i>
                                        </div>
                                        <div class="position-absolute bottom-0 start-0 w-100 h-100 opacity-10">
                                            <div class="position-absolute bottom-0 end-0" style="width: 100px; height: 100px; background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);"></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Upcoming Events -->
            <div class="col-lg-8">
                <!-- Recent Activity -->
                <div class="cisco-card h-100">
                    <div class="cisco-card-body">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="d-flex align-items-center">
                                <div class="me-3 cisco-glass" style="width: 40px; height: 40px; border-radius: var(--cisco-radius-md); display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-clock cisco-text-gradient" aria-hidden="true"></i>
                                </div>
                                <h3 class="mb-0 fw-bold">Recent Activity</h3>
                            </div>
                            <div class="cisco-pulse">
                                <div class="rounded-circle" style="width: 12px; height: 12px; background: var(--cisco-success);"></div>
                            </div>
                        </div>
                        
                        @if (Model.RecentActivities?.Any() == true)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activity in Model.RecentActivities)
                                {
                                    <div class="list-group-item border-0 px-0 py-3 rounded-3 mb-2" style="background: var(--cisco-gradient-subtle);">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3 cisco-glass rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="@activity.Icon" style="font-size: var(--cisco-text-sm); color: var(--cisco-primary-blue);" aria-hidden="true"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <p class="mb-1 fw-medium">@activity.Description</p>
                                                <small class="text-muted d-flex align-items-center">
                                                    <i class="fas fa-clock me-1" style="font-size: 0.7rem;" aria-hidden="true"></i>
                                                    @activity.TimeAgo
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="cisco-glass rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <i class="fas fa-history" style="font-size: 2rem; color: var(--cisco-gray-400);" aria-hidden="true"></i>
                                </div>
                                <h5 class="text-muted mb-2">No recent activity</h5>
                                <p class="text-muted mb-4">Start attending events to see your activity here!</p>
                                <a href="/events" class="cisco-primary-btn cisco-btn-base">
                                    <i class="fas fa-calendar-alt" aria-hidden="true"></i>
                                    Browse Events
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Profile Summary and Notifications -->
            <div class="col-lg-4">
                <div class="row g-4">
                    <!-- Profile Summary -->
                    <div class="col-12">
                        <div class="cisco-card">
                            <div class="cisco-card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="me-3 cisco-glass" style="width: 32px; height: 32px; border-radius: var(--cisco-radius-sm); display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-user cisco-text-gradient" style="font-size: 0.9rem;" aria-hidden="true"></i>
                                    </div>
                                    <h4 class="mb-0 fw-bold">Profile Summary</h4>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="text-muted small d-block">Email</label>
                                    <p class="mb-0 fw-medium">@Model.Email</p>
                                </div>
                                
                                @if (Model.IsStudent)
                                {
                                    <div class="mb-3">
                                        <label class="text-muted small d-block">Status</label>
                                        <span class="badge rounded-pill d-inline-flex align-items-center" style="background: var(--cisco-gradient-success); color: white; padding: var(--cisco-space-2) var(--cisco-space-3);">
                                            <i class="fas fa-graduation-cap me-1" aria-hidden="true"></i>Student
                                        </span>
                                    </div>
                                }
                                
                                <div class="mb-3">
                                    <label class="text-muted small d-block">Member Since</label>
                                    <p class="mb-0 fw-medium d-flex align-items-center">
                                        <i class="fas fa-calendar me-2 text-muted" aria-hidden="true"></i>
                                        @Model.DaysAsMember days ago
                                    </p>
                                </div>
                                
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <label class="text-muted small">Profile Completion</label>
                                        <span class="small fw-bold cisco-text-gradient">@(Model.ProfileCompletionPercentage)%</span>
                                    </div>
                                    <div class="progress" style="height: 8px; border-radius: var(--cisco-radius-sm); background: var(--cisco-gray-100);">
                                        <div class="progress-bar" 
                                             style="width: @(Model.ProfileCompletionPercentage)%; background: var(--cisco-gradient-primary); border-radius: var(--cisco-radius-sm);"
                                             role="progressbar" 
                                             aria-valuenow="@Model.ProfileCompletionPercentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100"
                                             aria-label="Profile completion progress"></div>
                                    </div>
                                </div>
                                
                                <a href="/dashboard/profile" class="cisco-secondary-btn cisco-btn-base w-100">
                                    <i class="fas fa-edit" aria-hidden="true"></i>
                                    Edit Profile
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Notifications -->
                    <div class="col-12">
                        <div class="cisco-card">
                            <div class="cisco-card-body">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3 cisco-glass" style="width: 32px; height: 32px; border-radius: var(--cisco-radius-sm); display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-bell cisco-text-gradient" style="font-size: 0.9rem;" aria-hidden="true"></i>
                                        </div>
                                        <h4 class="mb-0 fw-bold">Notifications</h4>
                                    </div>
                                    @if (Model.Notifications?.Any() == true)
                                    {
                                        <span class="badge rounded-pill" style="background: var(--cisco-gradient-primary); color: white;">
                                            @Model.Notifications.Count(n => !n.IsRead)
                                        </span>
                                    }
                                </div>
                                
                                @if (Model.Notifications?.Any() == true)
                                {
                                    <div class="notification-list" style="max-height: 300px; overflow-y: auto;">
                                        @foreach (var notification in Model.Notifications.Take(5))
                                        {
                                            <div class="border-bottom py-3 @(notification.IsRead ? "opacity-75" : "")" style="border-color: var(--cisco-gray-100) !important;">
                                                <div class="d-flex align-items-start">
                                                    <div class="me-2">
                                                        @if (!notification.IsRead)
                                                        {
                                                            <div class="rounded-circle" style="width: 6px; height: 6px; background: var(--cisco-primary-blue); margin-top: 6px;"></div>
                                                        }
                                                        else
                                                        {
                                                            <div style="width: 6px; height: 6px; margin-top: 6px;"></div>
                                                        }
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <p class="mb-1 small">@notification.Message</p>
                                                        <small class="text-muted d-flex align-items-center">
                                                            <i class="fas fa-clock me-1" style="font-size: 0.6rem;" aria-hidden="true"></i>
                                                            @notification.TimeAgo
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    @if (Model.Notifications.Count > 5)
                                    {
                                        <div class="text-center mt-3">
                                            <a href="/dashboard/notifications" class="small cisco-text-gradient text-decoration-none fw-medium">
                                                View all notifications
                                            </a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <div class="cisco-glass rounded-circle mx-auto mb-2 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-bell-slash" style="font-size: 1.2rem; color: var(--cisco-gray-400);" aria-hidden="true"></i>
                                        </div>
                                        <p class="text-muted small mb-0">No new notifications</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            @if (Model.UpcomingEvents?.Any() == true)
            {
                <div class="col-12">
                    <div class="cisco-card">
                        <div class="cisco-card-body">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 cisco-glass" style="width: 40px; height: 40px; border-radius: var(--cisco-radius-md); display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-calendar-check cisco-text-gradient" aria-hidden="true"></i>
                                    </div>
                                    <h3 class="mb-0 fw-bold">Upcoming Events</h3>
                                </div>
                                <a href="/events" class="cisco-secondary-btn cisco-btn-base">
                                    <i class="fas fa-eye" aria-hidden="true"></i>
                                    View All
                                </a>
                            </div>
                            
                            <div class="row g-4">
                                @foreach (var eventItem in Model.UpcomingEvents.Take(3))
                                {
                                    <div class="col-md-4">
                                        <div class="cisco-card h-100 position-relative overflow-hidden">
                                            <div class="cisco-card-body">
                                                <div class="mb-3">
                                                    <div class="cisco-glass rounded-3 p-2 d-inline-flex">
                                                        <i class="fas fa-calendar-alt cisco-text-gradient" aria-hidden="true"></i>
                                                    </div>
                                                </div>
                                                <h5 class="fw-bold mb-2">@eventItem.EventTitle</h5>
                                                <p class="text-muted small mb-3">@eventItem.EventDescription</p>
                                                <div class="d-flex align-items-center text-muted small mb-2">
                                                    <i class="fas fa-calendar me-2" aria-hidden="true"></i>
                                                    <span>@eventItem.EventDate.ToString("MMM dd, yyyy")</span>
                                                </div>
                                                <div class="d-flex align-items-center text-muted small mb-3">
                                                    <i class="fas fa-map-marker-alt me-2" aria-hidden="true"></i>
                                                    <span>@eventItem.EventLocation</span>
                                                </div>
                                                <div class="mt-auto">
                                                    <a href="/events/@eventItem.EventId" class="cisco-primary-btn cisco-btn-base w-100 small">
                                                        <i class="fas fa-eye" aria-hidden="true"></i>
                                                        View Details
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="position-absolute top-0 end-0 p-2">
                                                <div class="cisco-glass rounded-circle" style="width: 24px; height: 24px; display: flex; align-items: center; justify-content: center;">
                                                    <div class="rounded-circle" style="width: 6px; height: 6px; background: var(--cisco-success);"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Enhanced card animations */
        .cisco-card {
            transition: all var(--cisco-transition-base);
        }
        
        .cisco-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--cisco-shadow-2xl);
        }
        
        /* List item hover effects */
        .list-group-item {
            transition: all var(--cisco-transition-fast);
            border: none !important;
        }
        
        .list-group-item:hover {
            background: var(--cisco-light-blue) !important;
            transform: translateX(4px);
        }
        
        /* Progress bar animation */
        .progress-bar {
            transition: width 1s ease-in-out;
            animation: progressFill 2s ease-in-out;
        }
        
        @@keyframes progressFill {
            0% { width: 0%; }
            100% { width: var(--progress-width, 0%); }
        }
        
        /* Notification list custom scrollbar */
        .notification-list::-webkit-scrollbar {
            width: 4px;
        }
        
        .notification-list::-webkit-scrollbar-track {
            background: var(--cisco-gray-100);
            border-radius: 2px;
        }
        
        .notification-list::-webkit-scrollbar-thumb {
            background: var(--cisco-primary-blue);
            border-radius: 2px;
        }
        
        /* Quick action card hover effects */
        .col-md-4 a .cisco-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: var(--cisco-shadow-2xl);
        }
        
        /* Stat card enhanced animations */
        .cisco-stat-card {
            transition: all var(--cisco-transition-base);
            cursor: pointer;
        }
        
        .cisco-stat-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--cisco-shadow-xl);
        }
        
        /* Glass morphism effects */
        .cisco-glass {
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        /* Loading animations */
        .cisco-card {
            animation: slideInUp 0.6s ease-out;
        }
        
        .cisco-card:nth-child(1) { animation-delay: 0.1s; }
        .cisco-card:nth-child(2) { animation-delay: 0.2s; }
        .cisco-card:nth-child(3) { animation-delay: 0.3s; }
        .cisco-card:nth-child(4) { animation-delay: 0.4s; }
        
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Badge pulse effect */
        .badge {
            animation: badgePulse 2s infinite;
        }
        
        @@keyframes badgePulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        
        /* Responsive enhancements */
        @@media (max-width: 992px) {
            .cisco-card-header h1 {
                font-size: var(--cisco-text-3xl) !important;
            }
            
            .cisco-stat-number {
                font-size: var(--cisco-text-4xl) !important;
            }
        }
        
        @@media (max-width: 768px) {
            .container-fluid {
                padding: var(--cisco-space-4) !important;
            }
            
            .cisco-card-body {
                padding: var(--cisco-space-6) !important;
            }
            
            .cisco-card-header {
                padding: var(--cisco-space-6) !important;
            }
            
            .cisco-card-header h1 {
                font-size: var(--cisco-text-2xl) !important;
            }
            
            .row.g-4 {
                --bs-gutter-x: 1rem;
                --bs-gutter-y: 1rem;
            }
        }
        
        @@media (max-width: 576px) {
            .cisco-stat-number {
                font-size: var(--cisco-text-3xl) !important;
            }
            
            .quick-actions .col-md-4 {
                margin-bottom: var(--cisco-space-4);
            }
        }
        
        /* Focus states for accessibility */
        .cisco-card:focus-within {
            outline: 2px solid var(--cisco-primary-blue);
            outline-offset: 2px;
        }
        
        .list-group-item:focus {
            background: var(--cisco-light-blue) !important;
            outline: 2px solid var(--cisco-primary-blue);
            outline-offset: -2px;
        }
        
        /* Print styles */
        @@media print {
            .cisco-card {
                break-inside: avoid;
