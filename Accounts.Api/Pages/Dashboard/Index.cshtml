@page "/dashboard"
@model Accounts.Api.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        <!-- Welcome Section -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-emerald-500 to-teal-600 px-6 py-4 flex items-center">
                <div class="flex-shrink-0">
                    @if (!string.IsNullOrWhiteSpace(Model.UserInfo?.Profilepicture))
                    {
                        <img class="h-16 w-16 rounded-full border-4 border-white shadow-lg" src="/profilePictures/@Model.UserInfo.Profilepicture" alt="Profile Picture" />
                    }
                    else
                    {
                        <div class="h-16 w-16 rounded-full bg-white/20 backdrop-blur-sm border-4 border-white shadow-lg flex items-center justify-center">
                            <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" /></svg>
                        </div>
                    }
                </div>
                <div class="ml-6">
                    <h1 class="text-3xl font-bold text-white">Welcome back, @Model.UserInfo?.Fname!</h1>
                    <p class="text-emerald-100 mt-1">Discover campus events and track your My Carolinian journey</p>
                </div>
            </div>
            <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
                    <div>
                        <div class="text-2xl font-bold text-emerald-600">@Model.AttendedCount</div>
                        <div class="text-sm text-gray-600">Events Attended</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-teal-600">@Model.BadgesCount</div>
                        <div class="text-sm text-gray-600">Badges Earned</div>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-emerald-600">@Model.CreatedEvents.Count</div>
                        <div class="text-sm text-gray-600">Events Created</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <div class="flex items-center mb-6">
                <div class="h-8 w-8 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center mr-3">
                    <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                </div>
                <h2 class="text-2xl font-bold text-gray-900">Quick Actions</h2>
            </div>
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                <a href="/events/create" class="group relative bg-gradient-to-br from-emerald-50 to-emerald-100 p-6 rounded-2xl border border-emerald-200 hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <div class="flex items-center justify-between">
                        <div class="h-12 w-12 bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                        </div>
                        <svg class="h-5 w-5 text-emerald-400 group-hover:text-emerald-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-emerald-700 transition-colors">Create New Event</h3>
                        <p class="mt-2 text-sm text-gray-600">Set up a new campus event and start collecting registrations</p>
                    </div>
                </a>
                <a href="/dashboard/badges" class="group relative bg-gradient-to-br from-teal-50 to-teal-100 p-6 rounded-2xl border border-teal-200 hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <div class="flex items-center justify-between">
                        <div class="h-12 w-12 bg-gradient-to-r from-teal-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                        </div>
                        <svg class="h-5 w-5 text-teal-400 group-hover:text-teal-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-teal-700 transition-colors">View My Badges</h3>
                        <p class="mt-2 text-sm text-gray-600">See all your My Carolinian achievements and earned badges</p>
                    </div>
                </a>
                <a href="/dashboard/profile" class="group relative bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-2xl border border-purple-200 hover:shadow-lg hover:scale-105 transition-all duration-200">
                    <div class="flex items-center justify-between">
                        <div class="h-12 w-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                        </div>
                        <svg class="h-5 w-5 text-purple-400 group-hover:text-purple-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-700 transition-colors">Edit Profile</h3>
                        <p class="mt-2 text-sm text-gray-600">Update your personal information and My Carolinian preferences</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Created Events -->
        @if (Model.CreatedEvents.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-8 py-6 border-b border-gray-200 flex items-center">
                    <div class="h-8 w-8 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center mr-3">
                        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Events You've Created</h2>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                            <tr>
                                <th class="px-6 py-4 text-left">Event Name</th>
                                <th class="px-6 py-4 text-left">Date</th>
                                <th class="px-6 py-4 text-left">Location</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-100">
                            @foreach (var ev in Model.CreatedEvents)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">@ev.Eventname</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@ev.Startdate?.ToString("MMM d, yyyy")</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@ev.Location</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <!-- Attended Events -->
        @if (Model.AttendedEvents.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
                <div class="flex items-center mb-6">
                    <div class="h-8 w-8 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center mr-3">
                        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">Your My Carolinian Journey</h2>
                </div>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    @foreach (var ev in Model.AttendedEvents)
                    {
                        <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-200 hover:scale-105">
                            @if (!string.IsNullOrWhiteSpace(ev.Eventbadgepath))
                            {
                                <div class="relative">
                                    <img class="w-full h-48 object-cover" src="@ev.Eventbadgepath" alt="Event Badge" />
                                    <div class="absolute top-4 right-4 bg-emerald-500 text-white px-2 py-1 rounded-lg text-xs font-semibold">Badge Earned</div>
                                </div>
                            }
                            else
                            {
                                <div class="w-full h-48 bg-gradient-to-br from-emerald-100 to-teal-100 flex items-center justify-center">
                                    <svg class="h-16 w-16 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                                </div>
                            }
                            <div class="p-4">
                                <h3 class="text-lg font-semibold text-gray-900 mb-1">@ev.Eventname</h3>
                                <p class="text-sm text-gray-600">@ev.Startdate?.ToString("MMM d, yyyy") â€¢ @ev.Location</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div> 