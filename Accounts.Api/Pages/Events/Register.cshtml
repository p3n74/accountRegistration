@page "/events/register/{key}"
@model Accounts.Api.Pages.Events.RegisterModel
@{
    ViewData["Title"] = "Register for Event";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        @if (Model.EventEntity == null)
        {
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-12 text-center">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Event not found</h2>
                <a href="/dashboard" class="text-emerald-600 hover:underline">Back to dashboard</a>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 space-y-6">
                <h1 class="text-3xl font-bold text-gray-900">@Model.EventEntity.Eventname</h1>
                <p class="text-gray-600">@Model.EventEntity.Eventshortinfo</p>
                <p class="text-sm text-gray-500">@Model.EventEntity.Startdate?.ToString("MMM d, yyyy HH:mm") â€“ @Model.EventEntity.Enddate?.ToString("MMM d, yyyy HH:mm")</p>
                <p class="text-sm text-gray-500">Location: @Model.EventEntity.Location</p>

                @if (Model.Success != null)
                {
                    <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-4 py-3 rounded-xl">@Model.Success</div>
                }
                else if (Model.Error != null)
                {
                    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-xl">@Model.Error</div>
                }

                <form method="post" class="space-y-4 max-w-md">
                    <div>
                        <label asp-for="InputEmail" class="block text-sm font-semibold text-gray-700 mb-2">Your Email</label>
                        <input asp-for="InputEmail" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 bg-gray-50 focus:bg-white focus:ring-emerald-500" />
                        <span asp-validation-for="InputEmail" class="text-xs text-red-600"></span>
                    </div>
                    <button type="submit" class="inline-flex justify-center items-center py-3 px-6 border border-transparent rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 shadow-lg">Register</button>
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 