@page "/events/manage/{id}"
@model Accounts.Api.Pages.Events.ManageModel
@{
    ViewData["Title"] = "Manage Participants";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        <h1 class="text-3xl font-bold text-gray-900">Manage Participants â€“ @Model.EventEntity?.Eventname</h1>
        <p class="text-gray-600">Total participants: @Model.Participants.Count</p>

        <!-- Add Participant -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6">
            <form method="post" asp-page-handler="Add" class="flex flex-col sm:flex-row gap-4">
                <input asp-for="NewEmail" placeholder="Email address" class="flex-1 px-4 py-3 border rounded-xl" />
                <button type="submit" class="px-6 py-3 rounded-xl bg-gradient-to-r from-emerald-600 to-teal-600 text-white">Add Participant</button>
            </form>
            <span asp-validation-for="NewEmail" class="text-sm text-red-600"></span>
        </div>

        <!-- Participants List -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
                    <tr>
                        <th class="px-6 py-3 text-left">Email</th>
                        <th class="px-6 py-3 text-left">Status</th>
                        <th class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    @foreach (var p in Model.Participants)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">@p.Email</td>
                            <td class="px-6 py-4">
                                @if (p.AttendanceStatus)
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-emerald-100 text-emerald-700 text-xs font-semibold">Present</span>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Mark" class="inline">
                                        <input type="hidden" name="participantId" value="@p.ParticipantId" />
                                        <button type="submit" class="text-sm text-blue-600 hover:underline">Mark Present</button>
                                    </form>
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <form method="post" asp-page-handler="Remove" class="inline" onsubmit="return confirm('Remove participant?');">
                                    <input type="hidden" name="participantId" value="@p.ParticipantId" />
                                    <button type="submit" class="text-sm text-red-600 hover:underline">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="/dashboard" class="inline-flex items-center text-sm font-semibold text-emerald-600 hover:text-emerald-500">&larr; Back to dashboard</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 