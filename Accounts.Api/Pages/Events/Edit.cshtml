@page "/events/edit/{id}"
@model Accounts.Api.Pages.Events.EditModel
@{
    ViewData["Title"] = "Edit Event";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5" /></svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Event</h1>
            <p class="text-gray-600">Update details for your event.</p>
        </div>

        @if (Model.Error != null)
        {
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-xl">@Model.Error</div>
        }
        @if (Model.Success != null)
        {
            <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-4 py-3 rounded-xl">@Model.Success</div>
        }

        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <form method="post" class="space-y-8">
                <div>
                    <label asp-for="Input.EventName" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.EventName" class="block w-full px-4 py-3 border border-gray-200 rounded-xl" />
                    <span asp-validation-for="Input.EventName" class="text-xs text-red-600"></span>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.StartDate" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <input asp-for="Input.StartDate" type="datetime-local" class="block w-full px-4 py-3 border border-gray-200 rounded-xl" />
                    </div>
                    <div>
                        <label asp-for="Input.EndDate" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <input asp-for="Input.EndDate" type="datetime-local" class="block w-full px-4 py-3 border border-gray-200 rounded-xl" />
                    </div>
                </div>
                <div>
                    <label asp-for="Input.Location" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.Location" class="block w-full px-4 py-3 border border-gray-200 rounded-xl" />
                </div>
                <div>
                    <label asp-for="Input.ShortInfo" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <textarea asp-for="Input.ShortInfo" rows="3" class="block w-full px-4 py-3 border border-gray-200 rounded-xl"></textarea>
                </div>
                <div>
                    <label asp-for="Input.LongInfo" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <textarea asp-for="Input.LongInfo" rows="6" class="block w-full px-4 py-3 border border-gray-200 rounded-xl"></textarea>
                </div>

                <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                    <button asp-page-handler="Delete" class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold bg-red-600 text-white hover:bg-red-700" onclick="return confirm('Delete this event?');">Delete</button>
                    <button type="submit" class="inline-flex items-center px-6 py-3 rounded-xl text-sm font-semibold bg-gradient-to-r from-emerald-600 to-teal-600 text-white hover:from-emerald-700 hover:to-teal-700">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 