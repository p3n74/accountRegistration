@page "/events/create"
@model Accounts.Api.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Event</h1>
            <p class="text-gray-600 max-w-2xl mx-auto">Share your event with the community and help students discover new experiences.</p>
        </div>

        @if (Model.Error != null)
        {
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-xl">@Model.Error</div>
        }
        @if (Model.Success != null)
        {
            <div class="bg-emerald-50 border border-emerald-200 text-emerald-800 px-4 py-3 rounded-xl">@Model.Success</div>
        }

        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Event Details</h2>
            <form method="post" class="space-y-8">
                <div>
                    <label asp-for="Input.EventName" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.EventName" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white" />
                    <span asp-validation-for="Input.EventName" class="text-xs text-red-600"></span>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Input.StartDate" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <input asp-for="Input.StartDate" type="datetime-local" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white" />
                        <span asp-validation-for="Input.StartDate" class="text-xs text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Input.EndDate" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                        <input asp-for="Input.EndDate" type="datetime-local" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white" />
                        <span asp-validation-for="Input.EndDate" class="text-xs text-red-600"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="Input.Location" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <input asp-for="Input.Location" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white" />
                    <span asp-validation-for="Input.Location" class="text-xs text-red-600"></span>
                </div>
                <div>
                    <label asp-for="Input.ShortInfo" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <textarea asp-for="Input.ShortInfo" rows="3" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white"></textarea>
                </div>
                <div>
                    <label asp-for="Input.LongInfo" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                    <textarea asp-for="Input.LongInfo" rows="6" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 focus:ring-emerald-500 bg-gray-50 focus:bg-white"></textarea>
                </div>
                <button type="submit" class="inline-flex justify-center items-center py-3 px-6 border border-transparent rounded-xl text-sm font-semibold text-white bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 shadow-lg">Create Event</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 