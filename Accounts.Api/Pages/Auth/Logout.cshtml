@page
@model Accounts.Api.Pages.Auth.LogoutModel
@{
    ViewData["Title"] = "Signing Out";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 via-white to-slate-100 p-6">
    <div class="max-w-md w-full bg-white shadow-xl rounded-2xl p-8 text-center">
        <div class="mx-auto h-16 w-16 bg-gradient-to-r from-[#4A90E2] to-[#2E5BBA] rounded-2xl flex items-center justify-center mb-6 shadow-lg">
            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
        </div>
        <h2 class="text-2xl font-bold mb-4 text-gray-900">Signing you out...</h2>
        <p class="text-gray-600 mb-6">Please wait while we securely sign you out of your account.</p>
        <div class="flex justify-center">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-[#4A90E2]"></div>
        </div>
    </div>
</div>

<script>
    // Auto-redirect after a brief delay
    setTimeout(() => {
        window.location.href = '/auth/login';
    }, 2000);
</script> 