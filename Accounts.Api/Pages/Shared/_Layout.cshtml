@{
    var title = ViewData["Title"] as string ?? "My Carolinian";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link href="/dist/output.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@keyframes gradient-shift {
            0%,100% {background-position:0% 50%}
            50% {background-position:100% 50%}
        }
        .gradient-animate {background-size:200% 200%;animation:gradient-shift 8s ease infinite}
    </style>
</head>
<body class="bg-gradient-to-br from-slate-50 via-white to-slate-100 min-h-screen flex flex-col">
    <!-- TODO: Port navigation & flash messages using Blazor/TagHelpers -->

    <main class="flex-1">
        @RenderBody()
    </main>
    <footer class="bg-white/80 backdrop-blur-lg border-t border-gray-100 mt-auto p-4 text-center text-sm text-gray-500">
        &copy; @DateTime.UtcNow.Year My Carolinian
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html> 