@page "/channels"
@model Accounts.Api.Pages.Channels.IndexModel
@{
    ViewData["Title"] = "My Channels";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        <h1 class="text-3xl font-bold text-gray-900">My Channels</h1>
        <p class="text-gray-600">Select a channel to start chatting.</p>

        @if (!Model.Channels.Any())
        {
            <p class="text-gray-500 mt-6">You are not a member of any channels.</p>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
                        <tr>
                            <th class="px-6 py-3 text-left">Name</th>
                            <th class="px-6 py-3 text-left">Type</th>
                            <th class="px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                    @foreach (var ch in Model.Channels)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">@ch.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@ch.ChannelType</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <a href="/channels/@ch.ChannelId" class="text-sm text-emerald-600 hover:underline">Open</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div> 