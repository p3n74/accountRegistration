{
  "name": "accounts-app",
  "version": "1.0.0",
  "description": "PHP Accounts Application with Tailwind CSS and Node.js WebSocket Server",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build-prod": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "start": "node nodejs-server/server.js",
    "dev": "nodemon nodejs-server/server.js"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "mysql2": "^3.6.0",
    "chokidar": "^3.5.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.3.0",
    "uuid": "^9.0.0"
  }
} 